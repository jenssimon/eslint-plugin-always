{
  "name": "eslint-plugin-always",
  "version": "0.0.0-development",
  "description": "ESLint plugin that always reports with configurable message",
  "main": "dist/index.js",
  "author": "Jens Simon",
  "license": "MIT",
  "homepage": "https://github.com/jenssimon/eslint-plugin-always#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/eslint-plugin-always.git"
  },
  "type": "commonjs",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "types": "dist/index.d.ts",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin"
  ],
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@jenssimon/eslint-config-base": "6.3.8",
    "@jenssimon/eslint-config-typescript": "3.6.5",
    "@types/eslint": "8.4.6",
    "@types/node": "18.7.23",
    "commitizen": "4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.24.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "semantic-release": "19.0.5",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "peerDependencies": {
    "eslint": ">=1.0.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@jenssimon/base",
      "@jenssimon/typescript"
    ],
    "rules": {
      "@typescript-eslint/naming-convention": "off"
    }
  },
  "scripts": {
    "lint": "eslint --fix --ext .js,.ts ./ && tsc --noEmit",
    "build": "tsc",
    "prepublishOnly": "tsc",
    "ci-test": "run-s \"ci-test:*\"",
    "ci-test:lint": "eslint ./",
    "ci-test:tsc": "tsc --noEmit",
    "commit": "cz",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "packageManager": "yarn@3.2.4",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint"
  }
}
